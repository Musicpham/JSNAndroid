<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Wähle Deinen Platz:"
        android:id="@+id/textView3"
        android:textColor="#fff"
        android:layout_marginBottom="66dp"
        android:layout_above="@+id/statusManual"
        android:layout_alignLeft="@+id/submitManual"
        android:layout_alignStart="@+id/submitManual" />

    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:textColor="#fff"
        android:id="@+id/spaceNumberManual"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignRight="@+id/submitManual"
        android:layout_alignEnd="@+id/submitManual" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:textColor="#fff"
        android:id="@+id/statusManual"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Auswählen"
        android:id="@+id/submitManual"
        android:textColor="#fff"
        android:background="@drawable/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="102dp" />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView2"
        android:src="@drawable/wifi"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:textColor="#fff"
        android:id="@+id/name"
        android:layout_marginRight="3dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/imageView2"
        android:layout_toStartOf="@+id/imageView2" />
</RelativeLayout>